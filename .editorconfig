# EditorConfig - https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Kotlin files
[*.{kt,kts}]
indent_size = 2
max_line_length = 120

# Java files
[*.java]
indent_size = 2
max_line_length = 120

# Gradle files
[*.gradle]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 2

# Makefile - must use tabs
[Makefile]
indent_style = tab

# Properties files
[*.properties]
charset = latin1
